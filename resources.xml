<?xml version="1.0" encoding="UTF-8"?>

<project>
<dirset id="template.dirs" dir="${listit.js.dir}" includes="*/templates/" />


<fileset id="jshint-files" dir="${listit.js.dir}">
    <include name="**/*.js" />
    <exclude name="**/templates.js" />
    <exclude name="libs/**" />
</fileset>

<resources id="css.wysihtml5">
    <filelist dir="${listit.css.dir}">
        <file name="reset.css"/>
        <file name="wysihtml5.css"/>
    </filelist>
</resources>

<resources id="js.libs.jquery">
    <filelist dir="${listit.js.dir}/libs">
        <file name="jquery.js" />
        <file name="jquery-ui.js" />
    </filelist>
    <fileset dir="${listit.js.dir}/libs/">
        <include name="jquery.*.js"/>
    </fileset>
</resources> 


<resources id="js.libs.compatability">
    <filelist dir="${listit.js.dir}/libs/">
        <file name="BlobBuilder.js" />
        <file name="FileSaver.js" />
        <file name="html5notifications.js" />
        <file name="modernizr.js" />
    </filelist>
</resources>

<resources id="js.libs.wysihtml5">
    <filelist dir="${listit.js.dir}/libs/wysihtml5">
        <file name="parser_rules/advanced.js" />
        <file name="dist/wysihtml5-0.3.0.js" />
    </filelist>
</resources>

<resources id="js.libs.underscore">
    <filelist dir="${listit.js.dir}/libs">
        <file name="underscore.js" />
    </filelist>
    <fileset dir="${listit.js.dir}/libs/">
        <include name="underscore.*.js"/>
    </fileset>
</resources>
<resources id="js.libs.rangy">
    <filelist dir="${listit.js.dir}/libs">
        <file name="rangy.js" />
    </filelist>
    <fileset dir="${listit.js.dir}/libs/">
        <include name="rangy.*.js"/>
    </fileset>
</resources>

<resources id="js.libs.backbone">
    <filelist dir="${listit.js.dir}/libs">
        <file name="backbone.js" />
    </filelist>
    <fileset dir="${listit.js.dir}/libs/">
        <include name="backbone.*.js"/>
    </fileset>
</resources>

<resources id="js.libs">
    <resources refid="js.libs.jquery" />
    <resources refid="js.libs.compatability" />
    <resources refid="js.libs.rangy" />
    <resources refid="js.libs.underscore" />
    <resources refid="js.libs.backbone" />
    <resources refid="js.libs.wysihtml5" />
</resources>

<resources id="js.modules">
    <fileset dir="${listit.js.dir}">
        <include name="*/main.js" />
    </fileset>
    <fileset dir="${listit.js.dir}">
        <include name="*/templates.js" />
    </fileset>
    <fileset dir="${listit.js.dir}">
        <include name="*/models.js" />
    </fileset>
    <fileset dir="${listit.js.dir}">
        <include name="*/collections.js" />
    </fileset>
    <fileset dir="${listit.js.dir}">
        <include name="*/views.js" />
    </fileset>
</resources>

<resources id="js.common">
    <filelist dir="${listit.js.dir}">
        <file name="main.js" />
        <file name="constants.js" />
        <file name="util.js" />
        <file name="actionqueue.js" />
    </filelist>
</resources>

<resources id="js.router">
    <fileset file="${listit.js.dir}/router.js" />
</resources>

<resources id="js.setup">
    <filelist dir="${listit.js.dir}">
        <file name="upgrade.js" />
        <file name="model-setup.js" />
        <file name="view-setup.js" />
    </filelist>
</resources>

<resources id="js.collectors">
    <fileset dir="${listit.js.dir}/collectors" excludes="${settings.disabled_collectors}">
        <include name="*.js" />
    </fileset>
</resources>

<resources id="js.all">
    <resources refid="js.libs" />
    <resources refid="js.common" />
    <resources refid="js.router" />
    <resources refid="js.modules" />
    <resources refid="js.collectors" />
    <resources refid="js.setup" />
</resources>


<resources id="css.all">
    <filelist dir="${listit.css.dir}" files="reset.css" />
    <fileset dir="${listit.css.dir}">
        <include name="*.css"/>
        <exclude name="reset.css"/>
    </fileset>
</resources>
</project>



